<div>
  <table id="movies_table" class="table table-striped table-bordered" style="width:100%">
    <thead>
      <tr>
        <th style="width: 25"> Name </th>
        <th style="width: 25"> URL </th>
        <th style="width: 15%" class="no-print"> Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @movies_collection.each do |resource| %>
        <tr>
          <td class="text">
            <%= resource.name %>
          </td>
          <td class="text">
            <%= link_to resource.url, target: :_blank do %>
              <%= resource.url %>
            <% end %>
          </td>
            <td class="text-center no-print">
                <%= link_to edit_movie_path resource, {'title' => 'Edit', 'data-toggle' => 'tooltip'} do%>
                  <%= fas_icon 'pencil-alt', class: 'ml-3' %>
                <% end -%>
                <%= link_to movie_path resource, {'title' => 'Delete', 'data-toggle' => 'tooltip', 'method' => 'delete', 'data' => { 'confirm' => 'Are you sure?' } }  do%>
                  <%= fas_icon 'trash', class: 'ml-3' %>
                <% end -%>
            </td>
        </tr>
      <% end -%>
    </tbody>
  </table>
</div>
<%= render partial: 'shared/data_table', locals: { table_id: 'movies_table', new_resource_path: new_movie_path, resource_class: Movie, add_new_btn_text: 'Add Movie' } %>
